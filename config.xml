				<dayofweek>6</dayofweek>
				<dayofweek>7</dayofweek>
			</daysofweek>
			
			<events>
				<event>
					<debut>*:10</debut>
					<fin>*:20</fin>
					<mode>101</mode>
					<priority>1</priority>
				</event>

				<event>
					<debut>*:40</debut>
					<fin>*:50</fin>
					<mode>101</mode>
					<priority>1</priority>
				</event>
				
		
				<event>
					<debut>0:0</debut>
					<fin>23:59</fin>
					<mode>6</mode>
					<priority>5</priority>	
				0</event>
			</events>
		</program>
		
		<program>
