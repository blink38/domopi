			<description>Programme pour l'hivers</description>
			<id>4</id>
			<active>false</active>
			<daysofweek>
				<dayofweek>1</dayofweek>
				<dayofweek>2</dayofweek>
				<dayofweek>3</dayofweek>
				<dayofweek>4</dayofweek>
